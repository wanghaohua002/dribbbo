<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
      android:id="@+id/iv_preview"
      android:layout_width="match_parent"
      android:layout_height="240dp"
      android:scaleType="centerCrop"
      tools:src="@color/color_33000000"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="center_vertical">

      <TextView
        android:id="@+id/tv_bucket_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_inbox_black_18dp"
        android:drawablePadding="4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        tools:text="78"/>

      <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_favorite_gray_18dp"
        android:drawablePadding="4dp"
        android:layout_toLeftOf="@+id/tv_bucket_count"
        android:layout_marginRight="16dp"
        tools:text="78"/>

      <TextView
        android:id="@+id/tv_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_visibility_gray_18dp"
        android:drawablePadding="4dp"
        android:layout_toLeftOf="@+id/tv_like_count"
        android:layout_marginRight="16dp"
        tools:text="78"/>

    </RelativeLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>