<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <TextView
      android:id="@+id/tv_bucket_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:textSize="17sp"
      android:textColor="@color/color_cc000000"
      tools:text="bucket name"/>

    <TextView
      android:id="@+id/tv_bucket_shot_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/tv_bucket_name"
      android:layout_marginTop="4dp"
      tools:text="90 shots"
      />

    <ImageView
      android:id="@+id/iv_bucket_checkbox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:src="@drawable/ic_check_box_outline_blank_black_24dp"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>